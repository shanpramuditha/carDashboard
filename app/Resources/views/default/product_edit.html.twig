                    </div>

                    <div class="form-group">
                        {{ form_label(form.convertable,null,{'label_attr':{'class':'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.convertable,{'attr':{'class':'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(form.convertable) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.save,{'attr':{'class':'btn btn-success' }}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
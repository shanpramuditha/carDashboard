                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.fuel,{'attr':{'class':'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(form.fuel) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.engine,null,{'label_attr':{'class':'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.engine,{'attr':{'class':'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(form.engine) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.torque,null,{'label_attr':{'class':'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(form.torque,{'attr':{'class':'form-control col-md-7 col-xs-12'}}) }}

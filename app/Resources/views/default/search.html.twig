<!-- Filter-Form -->
<section id="filter_form" class="gray-bg">
    <div class="container">
        <h3>Find Your Dream Car <span>(Easy search from here)</span></h3>
            <form method="get">
                <div class="row">
                <div class="form-group col-md-3 col-sm-6 black_input">
                    <label for="brand">Fuel MPG</label>
                    <input type="number" class="form-control" id="fuel" name="fuel" value="{{ fuel }}">
                </div>

                    <div class="form-group col-md-6 col-sm-6 black_input">
                        <label for="wheels" class="form-label">Wheels</label>
                        {% if wheels | length == 2 %}
                            <input name="wheels" id="wheels" type="text" class="span2" value="" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="[{{ wheels[0] }},{{ wheels[1] }}]"/>
                        {% else %}
                            <input name="wheels" id="wheels" type="text" class="span2" value="" data-slider-min="0" data-slider-max="20" data-slider-step="1" data-slider-value="[0,20]"/>
                        {% endif %}
                    </div>

                <div class="form-group col-md-3 col-sm-6 black_input">
                    <label for="model">No of doors</label>
                    <input type="number" class="form-control" id="doors" name="doors" value="{{ doors }}" min="1" max="64">
                </div>
                </div>

                <div class="row">

                <div class="form-group col-md-6 col-sm-6 black_input">
                    <label for="price_range" class="form-label">Price Range ($)</label>
                    {% if price | length == 2 %}
                        <input name="price" id="price_range" type="text" class="span2" value="" data-slider-min="0" data-slider-max="6000" data-slider-step="5" data-slider-value="[{{ price[0] }},{{ price[1] }}]"/>
                    {% else %}
                        <input name="price" id="price_range" type="text" class="span2" value="" data-slider-min="0" data-slider-max="6000" data-slider-step="5" data-slider-value="[0,5000]"/>
                    {% endif %}
                </div>
                <div class="form-group col-md-6 col-sm-6 black_input">
                    <label for="speed_range" class="form-label">Speed Range Km/H</label>
                    {% if speed | length == 2 %}
                        <input name="speed" id="speed_range" type="text" class="span2" value="" data-slider-min="0" data-slider-max="6000" data-slider-step="5" data-slider-value="[{{ speed[0] }},{{ speed[1] }}]"/>
                    {% else %}
                        <input name="speed" id="speed_range" type="text" class="span2" value="" data-slider-min="0" data-slider-max="6000" data-slider-step="5" data-slider-value="[0,5000]"/>
                    {% endif %}
                </div>

                </div>




                <div class="form-group">
                    <input type="checkbox" class="checkbox" {% if convertable == "on" %}checked{% endif %} name="convertable" > Convertable
                </div>

                <div class="row">
                <div class="form-group col-md-3 col-sm-6 pull-right">
                    <button type="submit" class="btn btn-block"><i class="fa fa-search" aria-hidden="true"></i> Search Car </button>
                </div>
                </div>
            </form>
        </div>
    </div>
</section>


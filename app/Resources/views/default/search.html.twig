<div class="container">
    <div class="row">
        <table id="myTable">
            <thead>
                <th>Name</th>
                <th>Price</th>
                <th>Fuel Consumption</th>
                <th>Top Speed</th>
                <th>Doors</th>
                <th>Engine</th>
                <th>Torque</th>
                <th>Convertable</th>
            </thead>
            <tbody>
                {% for car in cars %}
                    <tr>
                        <td>{{ car.brand }} {{ car.model }}</td>
                        <td>${{ car.price |number_format(2, '.', ',') }}</td>
                        <td>{{ car.fuel }} MPG</td>
                        <td>{{ car.topSpeed }} Km/H</td>
                        <td>{{ car.doors }} doors</td>
                        <td>{{ car.engine }} cc</td>
                        <td>{{ car.torque}} Nm</td>
                        <td>{% if(car.convertable == 1) %} Yes {% else %} No {% endif %}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
    var carDetails = new Array();

    {% for car in cars %}
        var dataSet = new Array();
        var name = '{{ car.brand }}' +' '+ '{{ car.model }}';
        var data = [{{ car.fuel }}, {{ car.wheels}}, {{ car.price }}, {{ car.topSpeed }}, {{ car.doors }}];
        dataSet['name'] = name;
        dataSet['data'] = data;
        carDetails.push(dataSet);
    {% endfor %}

    Highcharts.chart('container', {

        title: {
            text: 'Car Comparison Graph'
        },

        subtitle: {
            text: 'Source: thesolarfoundation.com'
        },

        yAxis: {
            title: {
                text: 'Value'
            }
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle'
        },
        xAxis: {
            categories: ['Fuel', 'Wheels', 'Price', 'Speed', 'Doors']
        },
        series:carDetails,

        // series: [{
